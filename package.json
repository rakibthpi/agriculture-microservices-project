{
  "name": "agriculture-marketplace",
  "version": "1.0.0",
  "description": "Agriculture Product Marketplace - Microservices Architecture",
  "private": true,
  "workspaces": [
    "apps/*",
    "apps/services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:gateway\" \"npm run dev:auth\" \"npm run dev:product\" \"npm run dev:order\" \"npm run dev:frontend\"",
    "dev:gateway": "npm run start:dev --workspace=api-gateway",
    "dev:auth": "npm run start:dev --workspace=auth-service",
    "dev:product": "npm run start:dev --workspace=product-service",
    "dev:order": "npm run start:dev --workspace=order-service",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "db:start": "docker-compose up -d",
    "db:stop": "docker-compose down",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
